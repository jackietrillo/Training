
import java.util.*;
import java.io.*;

public class HangManProgram{

	static String fileName = "E:\\CIS-255 Project 5\\dictionary.txt";
	static int maxGuesses = 5;
	static ArrayList<String> guessedLetters;
	static String randomWord;
	static int guessCount = 0;
	static String guessedLetter;

	//after the text file is loaded we save it in a private variable and every subsequent call to getRandomWord will check if it's loaded.
	public static String getRandomWord() {
		/*
		BufferedReader bufferReader = null;

		try {

			String line;

			bufferReader = new BufferedReader(new FileReader("E:\\CIS-255 Project 5\\dictionary.txt"));

			while ((line = bufferReader.readLine()) != null) {
				System.out.println(line);
			}

		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				if (bufferReader != null)bufferReader.close();
			} catch (IOException ex) {
				ex.printStackTrace();
			}
		}
		*/
		String word = "Hello";
		return word;
	}

	//go through each letter and if all of them are in the word then return true. If they got a wrong one
	//make the program work by using hello from the first function.
	public static void main(String[] args){
		
		System.out.println("Welcome to a game of Hangman!");

		randomWord = getRandomWord();
		guessedLetters = new ArrayList<String>();
		System.out.println(String.format("We have generated a random word: %s", randomWord));

		while(guessCount < maxGuesses) {
			System.out.println("Please guess a letter:");
				Scanner scanner = new Scanner(System.in);
				guessedLetter = scanner.nextLine();
				scanner.close();
				guessedLetters.contains(guessedLetter);
				guessCount++;

		String output = "";

		for(int i = 0; i < randomWord.length(); i++) {
	        char currentLetter = randomWord.toLowerCase().charAt(i);
	        if(guessedLetters.contains(String.valueOf(currentLetter))){
	        	output += currentLetter + " ";
	        }

	        else
				output += "_" + " ";
		}

			System.out.println(output);
		}

	}

}


